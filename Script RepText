--// Anonymous9x RepText v2.0
--// Improved UI + Draggable
--// By Beb (Improved Version)

local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local StarterGui = game:GetService("StarterGui")
local player = Players.LocalPlayer

-- Cleanup
if player.PlayerGui:FindFirstChild("Anonymous9xRepTextV2") then
	player.PlayerGui.Anonymous9xRepTextV2:Destroy()
end

-- ScreenGui
local gui = Instance.new("ScreenGui")
gui.Name = "Anonymous9xRepTextV2"
gui.ResetOnSpawn = false
gui.Parent = player.PlayerGui

-- Main Frame
local main = Instance.new("Frame")
main.Size = UDim2.fromOffset(500, 560)
main.Position = UDim2.fromScale(0.5, 0.5)
main.AnchorPoint = Vector2.new(0.5, 0.5)
main.BackgroundColor3 = Color3.fromRGB(18, 22, 35)
main.BorderSizePixel = 0
main.Parent = gui

Instance.new("UICorner", main).CornerRadius = UDim.new(0, 14)

-- Top Bar
local top = Instance.new("Frame")
top.Size = UDim2.new(1, 0, 0, 50)
top.BackgroundColor3 = Color3.fromRGB(12, 16, 28)
top.BorderSizePixel = 0
top.Parent = main

Instance.new("UICorner", top).CornerRadius = UDim.new(0, 14)

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -60, 1, 0)
title.Position = UDim2.fromOffset(15, 0)
title.BackgroundTransparency = 1
title.Text = "üîê ANONYMOUS9X REPORT GENERATOR"
title.Font = Enum.Font.GothamBold
title.TextSize = 18
title.TextColor3 = Color3.fromRGB(220, 230, 255)
title.TextXAlignment = Left
title.Parent = top

local close = Instance.new("TextButton")
close.Size = UDim2.fromOffset(34, 34)
close.Position = UDim2.new(1, -44, 0, 8)
close.BackgroundColor3 = Color3.fromRGB(190, 55, 55)
close.Text = "X"
close.Font = Enum.Font.GothamBold
close.TextSize = 16
close.TextColor3 = Color3.new(1,1,1)
close.Parent = top
Instance.new("UICorner", close).CornerRadius = UDim.new(0, 8)

-- Draggable
do
	local dragging, dragStart, startPos
	top.InputBegan:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseButton1 then
			dragging = true
			dragStart = input.Position
			startPos = main.Position
		end
	end)
	UIS.InputChanged:Connect(function(input)
		if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
			local delta = input.Position - dragStart
			main.Position = UDim2.new(
				startPos.X.Scale,
				startPos.X.Offset + delta.X,
				startPos.Y.Scale,
				startPos.Y.Offset + delta.Y
			)
		end
	end)
	UIS.InputEnded:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseButton1 then
			dragging = false
		end
	end)
end

-- Dropdown Button
local dropdown = Instance.new("TextButton")
dropdown.Size = UDim2.new(0.9, 0, 0, 44)
dropdown.Position = UDim2.fromOffset(25, 70)
dropdown.BackgroundColor3 = Color3.fromRGB(35, 40, 60)
dropdown.Text = "  ‚ñº Select Report Type"
dropdown.Font = Enum.Font.Gotham
dropdown.TextSize = 15
dropdown.TextColor3 = Color3.fromRGB(230, 235, 255)
dropdown.TextXAlignment = Left
dropdown.Parent = main
Instance.new("UICorner", dropdown).CornerRadius = UDim.new(0, 8)

-- Options
local optionFrame = Instance.new("Frame")
optionFrame.Size = UDim2.new(0.9, 0, 0, 0)
optionFrame.Position = dropdown.Position + UDim2.fromOffset(0, 48)
optionFrame.BackgroundColor3 = Color3.fromRGB(28, 32, 50)
optionFrame.ClipsDescendants = true
optionFrame.Visible = false
optionFrame.Parent = main
Instance.new("UICorner", optionFrame).CornerRadius = UDim.new(0, 8)

local scroll = Instance.new("ScrollingFrame")
scroll.Size = UDim2.new(1, -10, 1, -10)
scroll.Position = UDim2.fromOffset(5, 5)
scroll.CanvasSize = UDim2.new(0,0,0,0)
scroll.ScrollBarThickness = 4
scroll.BackgroundTransparency = 1
scroll.Parent = optionFrame

local layout = Instance.new("UIListLayout", scroll)
layout.Padding = UDim.new(0,6)

-- TextBox
local box = Instance.new("TextBox")
box.Size = UDim2.new(0.9, 0, 0, 200)
box.Position = UDim2.fromOffset(25, 300)
box.BackgroundColor3 = Color3.fromRGB(22, 26, 42)
box.TextWrapped = true
box.MultiLine = true
box.ClearTextOnFocus = false
box.Text = "Select report type above..."
box.Font = Enum.Font.RobotoMono
box.TextSize = 13
box.TextColor3 = Color3.new(1,1,1)
box.Parent = main
Instance.new("UICorner", box).CornerRadius = UDim.new(0, 8)

-- Copy Button
local copy = Instance.new("TextButton")
copy.Size = UDim2.new(0.9, 0, 0, 48)
copy.Position = UDim2.fromOffset(25, 515)
copy.BackgroundColor3 = Color3.fromRGB(0, 120, 255)
copy.Text = "üìã COPY REPORT TEXT"
copy.Font = Enum.Font.GothamBold
copy.TextSize = 17
copy.TextColor3 = Color3.new(1,1,1)
copy.Parent = main
Instance.new("UICorner", copy).CornerRadius = UDim.new(0, 10)

-- Data
local reports = {
	["üö´ NSFW Avatar Bypass"] = "I am reporting NSFW bypass avatar items that violate Roblox Community Standards.",
	["üîû Sexualized Avatar"] = "This avatar contains sexualized content inappropriate for the platform.",
	["üé≠ Scamming / Fraud"] = "User is scamming players by promising Robux or items.",
	["üí¢ Harassment / Hate"] = "Player is harassing or using hate speech in chat or username.",
	["‚ö° Exploiting"] = "Player is using exploits or cheats for unfair advantage.",
	["‚ö†Ô∏è Multiple Violations"] = "Player is committing multiple violations including NSFW, scam, and harassment."
}

-- Populate
for name, text in pairs(reports) do
	local b = Instance.new("TextButton")
	b.Size = UDim2.new(1, -10, 0, 36)
	b.BackgroundColor3 = Color3.fromRGB(45, 50, 75)
	b.Text = "  "..name
	b.Font = Enum.Font.Gotham
	b.TextSize = 14
	b.TextColor3 = Color3.fromRGB(235, 240, 255)
	b.TextXAlignment = Left
	b.Parent = scroll
	Instance.new("UICorner", b).CornerRadius = UDim.new(0,6)

	b.MouseButton1Click:Connect(function()
		dropdown.Text = "  ‚úì "..name
		box.Text = text
		optionFrame.Visible = false
	end)
end

layout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
	scroll.CanvasSize = UDim2.new(0,0,0,layout.AbsoluteContentSize.Y + 10)
	optionFrame.Size = UDim2.new(0.9, 0, 0, math.clamp(layout.AbsoluteContentSize.Y + 10, 0, 180))
end)

dropdown.MouseButton1Click:Connect(function()
	optionFrame.Visible = not optionFrame.Visible
end)

copy.MouseButton1Click:Connect(function()
	if setclipboard then
		setclipboard(box.Text)
		copy.Text = "‚úÖ COPIED!"
		task.wait(1.2)
		copy.Text = "üìã COPY REPORT TEXT"
	end
end)

close.MouseButton1Click:Connect(function()
	gui:Destroy()
end)

StarterGui:SetCore("SendNotification",{
	Title = "Anonymous9x RepText",
	Text = "Loaded Successfully (v2)",
	Duration = 3
})
